<!--pages/packForecast/packForecast.wxml-->
<view class="pages">
<view class="box" wx:for="{{forecastList}}" wx:key="{{index}}" >
<van-cell-group >

  <van-field
    value="{{ expressCompany }}"
    required
    clearable
     is-link="true"
    title-width="6.2rem"
    input-align="right"
    label="快递名称"
    placeholder="请选择快递名称"
         bindtap="onExpressClick"
         bind:change="expressCompanyChange"
         data-prop="expressCompany"
          data-index="{{index}}"
     
  />

  <van-field
    value="{{ hawbNo }}"
    clearable
    required
    title-width="7rem"
    input-align="right"
    label="快递单号"
     icon="scan"
     bind:click-icon="saoma"
    placeholder="请输入快递单号"
      bind:change="hawbNoChange"
     data-prop="hawbNo"
      data-index="{{index}}"
  />
    <van-field
    value="{{ productName  }}"
    required
    clearable
    title-width="6.2rem"
    input-align="right"
    label="物品名称"
    placeholder="请输入物品名称"
     bind:change="productNameChange"
     data-prop="productName"
      data-index="{{index}}"
  />
     <!-- <van-field
    value="{{ productName  }}"
    required
    clearable
    title-width="6.2rem"
    input-align="right"
    label="物品品牌"
    placeholder="没有请填无"
      bind:change="onChange"
     data-prop="productName"
  /> -->
   <van-field
    value="{{ svalue }}"
    required
    clearable
     title-width="6.2rem"
    input-align="right"
    label="物品价值（¥）"
    placeholder="请输入物品价值"
      bind:change="svalueChange"
     data-prop="svalue"
      data-index="{{index}}"
  />
 
       <van-field
    value="{{ goodsType  }}"
    required
    clearable
    disabled
     title-width="6.2rem"
    input-align="right"
    is-link="true"
    label="物品属性"
    placeholder="请选择物品属性"
    bindtap="onGoodsClick"
      bind:change="goodsTypeChange"
     data-prop="goodsType"
      data-index="{{index}}"
  />
     <van-field
    value="{{ remark }}"
 
    clearable
     title-width="6.2rem"
    input-align="right"
    label="商品备注"
    placeholder="您可以在这里告诉我们商品的颜色尺码等信息"
      bind:change="remarkChange"
     data-prop="remark"
      data-index="{{index}}"
  />
   </van-cell-group>
   <view  data-index="{{index}}" bindtap="delete">删除</view>
</view>
</view>



    <view class="click-button">
  <van-button round type="info" block bindtap="forecastAdd">添加一个包裹</van-button>
  </view>
  <view class="click-button">
  <van-button round type="info" block bindtap="submitForecast">提交预报</van-button>
  </view>
   


    <van-action-sheet
  show="{{ showExpress }}"
  title="标题"
  actions="{{ expressList }}"
  cancel-text="取消"
  bind:close="onExpressClose"
  bind:select="onExpressSelect"
/>


    <van-action-sheet
  show="{{ showGoods }}"
  title="标题"
  actions="{{ goodsList }}"
  cancel-text="取消"
  bind:close="onGoodsClose"
  bind:select="onGoodsSelect"
/>