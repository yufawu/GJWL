.box-item .van-cell__label{
    margin-top:10px;
}
.box-item{
    margin-bottom:10px;
}

.box-wrap{
    position:relative;
    background:#fff;
    margin-bottom: 10px;
   padding:15px 15px 0 15px;
   font-size:18px;
}
.box-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.box-center{
    font-size:14px;
    color:red;
    margin-bottom:15px;
}
.box-bottom{
    display:flex;
    justify-content: space-between;
    align-items: center;
    color:#969799;
    font-size:16px;
    padding-bottom:10px;
}
.box-createtime{
    font-size:12px;
}
.item-button{
    display:flex;
    justify-content: space-between;
    border-top:1px solid #ebedf0;
    padding-top:10px;
    padding-bottom:10px;
}
.item-right{
    display:flex;
    align-items: center;
}
.box-status{
    margin-right: 5px;
    font-size:14px;
    color:red;
   
}
.item-right .reply{
    color:#1c71fb;
}