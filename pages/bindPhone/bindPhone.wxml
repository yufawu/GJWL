<!--pages/bindPhone/bindPhone.wxml-->
<van-cell-group>
       <van-field
    value="{{ oldPhone }}"
    disabled
    label="旧手机号"
    placeholder=""
  />
    <van-field
    value="{{ phone }}"
    required
    clearable
    label="新手机号"
    placeholder="请输入手机号"
  />
   <van-field
    value="{{ sms }}"
    center
    required
    clearable
    label="验证码"
    placeholder="请输入验证码"
    border="{{ false }}"
    use-button-slot
  >
    <van-button slot="button" size="small" type="primary">
      获取验证码
    </van-button>
  </van-field>

</van-cell-group>
