<!--pages/abnormalClaim/abnormalClaim.wxml-->
  <van-field
    value="{{ item.hawbNo }}"
    clearable
    required
    title-width="7rem"
    input-align="right"
    label="快递单号"
     icon="scan"
     bind:click-icon="saoma"
    placeholder="请输入快递单号"
      bind:change="hawbNoChange"
     data-prop="hawbNo"
      data-index="{{index}}"
  />
 
  
   <van-cell-group title="内容清单">
          <van-field
    value="{{ item.hawbNo }}"
    clearable
    required
    title-width="7rem"
    input-align="right"
    label="品名"
    placeholder="请输入物品名称"
      bind:change="hawbNoChange"
      data-index="{{index}}"
  />
  <van-cell title='商品数量'>
      <view slot="">
  <van-stepper  value="{{ item.pcs }}" bind:change="pcsChange" data-index="{{index}}"/>
      </view>
  </van-cell>
</van-cell-group>
     <van-field
    value="{{ item.svalue }}"
    required
    clearable
     title-width="8.2rem"
    input-align="right"
    type="number"
    label="总价（¥）"
    placeholder="请输入总价（数字）"
      bind:change="svalueChange"
     data-prop="svalue"
      data-index="{{index}}"
  />
       <van-field
    value="{{ item.remark }}"
 
    clearable
     title-width="6.2rem"
    input-align="right"
    label="备注"
    placeholder="请输入备注"
      bind:change="remarkChange"
     data-prop="remark"
      data-index="{{index}}"
  />
