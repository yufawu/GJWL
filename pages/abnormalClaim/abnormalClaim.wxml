<!--pages/abnormalClaim/abnormalClaim.wxml-->
<view class="search">
  <van-search
  value="{{ searchValue }}"
  placeholder="请输入完整的运单号"
  use-action-slot
  bind:change="onValueChange"
  bind:search="onSearch"
>
 <view slot="action" bindtap="onSearchClick">搜索</view>
</van-search>
</view>
<view class="search-content" wx:if="{{showDetail}}">
  <van-cell-group title="包裹详情">
 <van-cell title="快递" title-width="3em" value="{{packDetail.expressCompany }}" />
  <van-cell title="单号" title-width="3em" value="{{packDetail.hawbNo}}" />
   <van-cell title="物品" title-width="3em" value="{{packDetail.productName}}" />
    <van-cell title="品牌" title-width="3em" value="{{packDetail.brand}}" />
     <van-cell title="价值" title-width="3em" value="{{packDetail.svalue}}" />
      <van-cell title="属性" title-width="3em" value="{{packDetail.goodsType}}" />
       <van-cell title="数量" title-width="3em" value="{{packDetail.pcs}}" />
         <van-cell title="重量" title-width="3em" value="{{packDetail.cwt}}" />
        <van-cell title="备注" title-width="3em" value="{{packDetail.remark}}" />
         <van-cell wx:if="{{packDetail.isUnpack == 0}}" title="是否拆包" value="是" />
        <van-cell wx:if="{{packDetail.isUnpack == 1}}" title="是否拆包" value="否" />
  </van-cell-group>

  <view class="address">
    <van-cell-group>
       <van-field
    value="{{ addressSelected.name }}{{addressSelected.tel}}{{addressSelected.address}}"
    required
    clearable
    disabled
     is-link="true"
    title-width="6.2rem"
    input-align="right"
    label="收货地址"
    placeholder="请选择收货地址"
         bindtap="onAddressClick"
    
     
  />
    </van-cell-group>
</view>
  <view class="box-button">
  <van-button type="danger" bindtap="claim">认领</van-button>
  </view>

     <van-action-sheet
  show="{{ showAddress }}"
  title="请选择收货地址"
  actions="{{ addressList }}"
  bind:close="onAddressClose"
  bind:select="onAddressSelect"
  cancel-text="增加地址"
  bind:cancel="onAddressCancel"
/>

</view>