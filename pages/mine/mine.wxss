/* pages/mine/mine.wxss */

.panel {
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.panel-title {
    border-bottom: 1px solid #ddd;
    padding-left: 30rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.message {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx 0;
}

.massage .text view {
    margin: 10rpx auto;
}

.avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
}

.name {
    margin-bottom: 20rpx;
}