<!-- pages/mine/mine.wxml -->
<view class="pages">
    <view class="panel">
        <view class="panel-title">个人信息</view>
        <view class="panel-box message">
            <van-image fit="cover" round width="100" height="100" src="https://img01.yzcdn.cn/vant/cat.jpeg" />
            <view class="text">
                <view>巫瑜发</view>
                <view>ID:144224</view>
            </view>
            <view class="text">
                <view>我的余额</view>
                <view>0.00</view>
            </view>
            <view class="text">
                <view>优惠券</view>
                <view>10</view>
            </view>
        </view>
    </view>
    <view class="panel">
        <view class="panel-title">我的包裹</view>
        <view class="panel-box">
            <van-grid square>
                <van-grid-item icon="clear" text="未入库"></van-grid-item>
                <van-grid-item icon="checked" text="已入库"></van-grid-item>
                <van-grid-item icon="clock" text="待处理"></van-grid-item>
            </van-grid>
        </view>
    </view>
    <view class="panel">
        <view class="panel-title">我的订单</view>
        <view class="panel-box">
            <van-grid square>
                <van-grid-item icon="cash-back-record" text="待支付"></van-grid-item>
                <van-grid-item icon="close" text="待发货"></van-grid-item>
                <van-grid-item icon="passed" text="已发货"></van-grid-item>
                <van-grid-item icon="completed" text="已签收"></van-grid-item>
            </van-grid>
        </view>
    </view>
    <view class="panel">
        <view class="panel-title">工具与服务</view>
        <view class="panel-box">
            <van-grid square>
                <van-grid-item icon="question-o" text="异常件领取"></van-grid-item>
                <van-grid-item icon="after-sale" text="交易记录"></van-grid-item>
                <van-grid-item icon="scan" text="一键预报"></van-grid-item>
                <van-grid-item bindtap='addressManage' icon="location-o" text="我的地址"></van-grid-item>
                <van-grid-item icon="phone-o" text="更改手机"></van-grid-item>
                <van-grid-item icon="comment-o" text="绑定邮箱"></van-grid-item>
                <van-grid-item icon="contact" text="关于我们"></van-grid-item>
                <van-grid-item icon="replay" text="退出登录"></van-grid-item>
            </van-grid>
        </view>
    </view>
</view>