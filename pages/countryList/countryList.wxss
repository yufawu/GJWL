/* pages/countryList/countryList.wxss */

.page-country-list {
    background: #fff;
    padding-top: 160rpx;
}

input {
    flex-grow: 1;
    height: 80rpx;
}

.search-container {
    padding: 40rpx 36rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: white;
    z-index: 99;
}

.search {
    display: flex;
    align-items: center;
    background: #ececec;
    border-radius: 12rpx;
}

.icon-search {
    width: 42rpx;
    height: 42rpx;
    margin-left: 36rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.country-list {
    padding-left: 36rpx;
}

.item {
    padding: 36rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 2rpx solid #ececec;
    color: #4C5567;
    font-size: 32rpx;
}

.title {
    background: #F5F6F7;
    padding: 8rpx 40rpx;
    color: #A5AEBE;
    font-size: 28rpx;
}

.hot-city-list {
    display: flex;
    padding: 40rpx 40rpx 0 40rpx;
    flex-wrap: wrap;
}

.hot-city-item {
    width: 220rpx;
    font-size: 32rpx;
    margin-bottom: 36rpx;
}